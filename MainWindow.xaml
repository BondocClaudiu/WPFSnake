<Window x:Class="WpfSnake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSnake"
        mc:Ignorable="d"
        Title="WPF Snake" Height="450" Width="780" Icon="./Resources/Snake.png" ResizeMode="CanMinimize" KeyDown="Window_KeyDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border BorderBrush="Black" BorderThickness="2">
            <Canvas Grid.Column="0" Name="paintCanvas" Background="#EEEEEE" Height="400" Width="600"></Canvas>
        </Border>
        
        <StackPanel Grid.Column="1" VerticalAlignment="Center">
            <Label Content="WPF Snake V1.0" FontFamily="Calibri" Opacity="20"></Label>
            <Label Content="Score:" FontSize="30" Background="AliceBlue" FontWeight="Bold"></Label>
            <Label Name="ScoreLabel" FontSize="25" HorizontalAlignment="Right" Content="0"></Label>
        </StackPanel>

    </Grid>
</Window>
